{
  "name": "dnp-build-action",
  "version": "1.0.0",
  "private": true,
  "description": "Builds and uploads a release to IPFS and comments its hash in the PR",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build --source-map",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "all": "npm run lint && npm run format-check && npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dappnode/dnp-build-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@dappnode/dappnodesdk": "^0.2.36"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.9",
    "@typescript-eslint/parser": "^4.5.0",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.8.1",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^24.9.0",
    "jest-circus": "^26.6.3",
    "ts-jest": "^24.3.0",
    "typescript": "^4.0.2"
  }
}
